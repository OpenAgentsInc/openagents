#!/bin/sh

# Git pre-push hook to run quality checks
# Ensures code quality before pushing to remote

echo "Running pre-push checks..."

# Run codegen to ensure index files are up to date
echo "ğŸ” Running codegen..."
pnpm codegen

# Check if codegen modified any files
if ! git diff --exit-code packages/*/src/index.ts > /dev/null 2>&1; then
    echo "âŒ Codegen modified files. Please commit the generated changes before pushing."
    echo "Run: git add packages/*/src/index.ts && git commit --amend"
    exit 1
fi

# Run lint check
echo "ğŸ” Running ESLint..."
if ! pnpm lint; then
    echo "âŒ ESLint failed. Fix linting errors before pushing."
    exit 1
fi

# Run type check
echo "ğŸ” Running TypeScript check..."
if ! pnpm check; then
    echo "âŒ TypeScript check failed. Fix type errors before pushing."
    exit 1
fi

# Run build check
echo "ğŸ” Running build..."
if ! pnpm build; then
    echo "âŒ Build failed. Fix build errors before pushing."
    exit 1
fi

# Run tests
echo "ğŸ” Running tests..."
if ! pnpm vitest run; then
    echo "âŒ Tests failed. Fix failing tests before pushing."
    exit 1
fi

echo "âœ… All pre-push checks passed!"
exit 0