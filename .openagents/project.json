{
  "version": 1,
  "projectId": "openagents",
  "defaultBranch": "main",
  "defaultModel": "x-ai/grok-4.1-fast:free",
  "rootDir": ".",
  "typecheckCommands": [
    "bun run typecheck"
  ],
  "testCommands": [
    "bun test"
  ],
  "sandboxTestCommands": [
    "bun run test:container"
  ],
  "e2eCommands": ["bun run e2e:test"],
  "allowPush": true,
  "allowForcePush": false,
  "maxTasksPerRun": 3,
  "maxRuntimeMinutes": 240,
  "idPrefix": "oa",
  "claudeCode": {
    "enabled": true,
    "preferForComplexTasks": false,
    "maxTurnsPerSubtask": 300,
    "permissionMode": "bypassPermissions",
    "fallbackToMinimal": false
  },
  "sandbox": {
    "enabled": true,
    "backend": "macos-container",
    "memoryLimit": "8G",
    "timeoutMs": 300000
  },
  "healer": {
    "enabled": true,
    "maxInvocationsPerSession": 3,
    "maxInvocationsPerSubtask": 2
  }
}
