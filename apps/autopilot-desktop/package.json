{
  "name": "autopilot-desktop",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "typecheck": "bun run types:gen && tsc --noEmit",
    "types:gen": "cargo run --manifest-path src-tauri/Cargo.toml --bin gen_types",
    "prepare": "effect-language-service patch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:adjutant": "bun run scripts/test-adjutant-planning.ts",
    "test:adjutant:auth": "bun run scripts/test-adjutant-planning.ts \"Add user authentication with JWT tokens\"",
    "test:adjutant:chat": "bun run scripts/test-adjutant-planning.ts \"Implement real-time chat functionality\""
  },
  "dependencies": {
    "@streamdown/cjk": "^1.0.1",
    "@streamdown/code": "^1.0.1",
    "@streamdown/math": "^1.0.1",
    "@streamdown/mermaid": "^1.0.1",
    "@tailwindcss/vite": "^4.1.18",
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-dialog": "^2",
    "@tauri-apps/plugin-opener": "^2",
    "effect": "^3.19.15",
    "nanoid": "^5.1.6",
    "shiki": "^3.21.0",
    "streamdown": "^2.1.0",
    "tailwindcss": "^4.1.18",
    "tokenlens": "^1.3.1"
  },
  "devDependencies": {
    "@effect/language-service": "^0.72.0",
    "@effect/vitest": "^0.19.0",
    "@tauri-apps/cli": "^2",
    "@types/node": "^25.0.10",
    "happy-dom": "^17.4.0",
    "tw-animate-css": "^1.4.0",
    "typescript": "5.7.2",
    "vite": "^6.0.3",
    "vitest": "^2.1.8"
  }
}
