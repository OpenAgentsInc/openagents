APP_NAME=Laravel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=sqlite
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=laravel
# DB_USERNAME=root
# DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

WORKOS_CLIENT_ID=
WORKOS_API_KEY=
WORKOS_REDIRECT_URL="${APP_URL}/authenticate"

# Maintenance-mode test login bypass (disabled by default)
OA_ALLOW_LOCAL_TEST_AUTH=false
OA_LOCAL_TEST_AUTH_EMAILS=

ADMIN_EMAILS=chris@openagents.com

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# AI (laravel/ai)
AI_DEFAULT=openrouter
OPENROUTER_API_KEY=


# Lightning / L402
L402_ALLOWLIST_HOSTS=sats4ai.com,l402.openagents.com
L402_CREDENTIAL_TTL_SECONDS=600
L402_RESPONSE_MAX_BYTES=65536
L402_RESPONSE_PREVIEW_BYTES=1024
L402_PAYMENT_TIMEOUT_MS=12000
L402_APPROVAL_TTL_SECONDS=600
L402_INVOICE_PAYER=spark_wallet

# LND REST (only required when L402_INVOICE_PAYER=lnd_rest)
LND_REST_BASE_URL=
LND_REST_MACAROON_HEX=
LND_REST_TLS_CERT_BASE64=
LND_REST_TLS_VERIFY=true

# Demo presets
L402_DEMO_SATS4AI_URL=https://sats4ai.com/api/l402/text-generation


# Smoke / diagnostics
OA_SMOKE_SECRET=
POSTHOG_API_KEY=
POSTHOG_HOST=https://us.i.posthog.com
POSTHOG_DISABLED=false

# PostHog (frontend; same project as POSTHOG_API_KEY)
VITE_POSTHOG_KEY=
VITE_POSTHOG_HOST=https://us.i.posthog.com

# Spark wallet executor (required when L402_INVOICE_PAYER=spark_wallet)
SPARK_EXECUTOR_BASE_URL=
SPARK_EXECUTOR_AUTH_TOKEN=
SPARK_EXECUTOR_TIMEOUT_MS=20000
SPARK_AGENT_WALLET_ID_PREFIX=oa-user-
