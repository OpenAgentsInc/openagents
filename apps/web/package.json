{
  "name": "web",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "license": "MIT",
  "homepage": "https://github.com/workos/template-convex-tanstack-start-authkit/#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/workos/template-convex-tanstack-start-authkit.git"
  },
  "bugs": {
    "url": "https://github.com/workos/template-convex-tanstack-start-authkit/issues"
  },
  "scripts": {
    "dev": "npm-run-all --parallel dev:client dev:backend dev:worker",
    "dev:client": "VITE_PRELAUNCH=1 vite build -c vite.effuse.config.ts --watch",
    "dev:backend": "convex dev",
    "dev:worker": "bash -c 'set -a; [ -f .env.local ] && . ./.env.local; [ -f .env ] && . ./.env; set +a; wrangler dev --port 3000'",
    "storybook": "vite dev -c vite.storybook.config.ts",
    "storybook:worker": "npm-run-all --parallel dev:client storybook:worker:server",
    "storybook:worker:server": "wrangler dev --port 6006",
    "predev": "convex dev --until-success",
    "dashboard": "convex dashboard",
    "build": "npm run build:effuse-client",
    "build:effuse-client": "vite build -c vite.effuse.config.ts",
    "build:prod": "bash -c 'set -a; [ -f .env ] && . ./.env; [ -f .env.production ] && . ./.env.production; set +a; vite build -c vite.effuse.config.ts'",
    "deploy": "npm run deploy:convex && npm run deploy:build && npm run deploy:worker",
    "deploy:convex": "bash -c 'set -a; [ -f .env.production ] && . ./.env.production; set +a; npx convex deploy --yes'",
    "deploy:build": "bash -c 'set -a; [ -f .env ] && . ./.env; [ -f .env.production ] && . ./.env.production; set +a; VITE_CONVEX_URL=${VITE_CONVEX_URL:-https://aware-caterpillar-962.convex.cloud} npm run build'",
    "deploy:worker": "node -e \"try{require('fs').unlinkSync('.wrangler/deploy/config.json')}catch(e){}\" && wrangler deploy --var VITE_PRELAUNCH:0",
    "wrangler:secrets": "bash scripts/sync-wrangler-secrets.sh",
    "cf-typegen": "wrangler types",
    "format": "prettier --write .",
    "lint": "tsc && eslint . --ext ts --report-unused-disable-directives --max-warnings 0",
    "test": "vitest run",
    "test:e2e": "bun run --cwd ../../packages/effuse-test src/cli.ts run --project ../../apps/web",
    "test:visual": "bun run --cwd ../../packages/effuse-test src/cli.ts run --project ../../apps/web --tag visual",
    "test:visual:update": "EFFUSE_TEST_UPDATE_SNAPSHOTS=1 bun run --cwd ../../packages/effuse-test src/cli.ts run --project ../../apps/web --tag visual",
    "test:watch": "vitest",
    "trace:admin": "bun scripts/autopilot-admin-trace.ts"
  },
  "dependencies": {
    "@effect-atom/atom": "^0.5.0",
    "@effect/ai": "^0.33.2",
    "@effect/experimental": "^0.58.0",
    "@effect/platform": "^0.94.3",
    "@effect/rpc": "^0.73.0",
    "@openagentsinc/dse": "file:../../packages/dse",
    "@openagentsinc/effuse": "file:../../packages/effuse",
    "@openagentsinc/effuse-flow": "file:../../packages/effuse-flow",
    "@openagentsinc/effuse-panes": "file:../../packages/effuse-panes",
    "@openagentsinc/effuse-ui": "file:../../packages/effuse-ui",
    "@openagentsinc/hud": "file:../../packages/hud",
    "@workos/authkit-session": "^0.3.4",
    "convex": "^1.31.7",
    "effect": "^3.19.16",
    "streamdown": "^2.1.0",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "0.11.1",
    "@cloudflare/workers-types": "4.20260205.0",
    "@convex-dev/eslint-plugin": "^1.1.1",
    "@eslint/js": "^9.21.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^24.10.10",
    "eslint": "^9.21.0",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.8.1",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.25.0",
    "vitest": "^3.2.4",
    "vite": "^7.3.1",
    "vite-tsconfig-paths": "^6.0.5",
    "wrangler": "^4.61.1"
  }
}
