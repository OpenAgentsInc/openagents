---
import "../styles/global.css";
import { ClientRouter } from "astro:transitions";
import AppShell from "../components/AppShell.tsx";
import Footer from "../components/Footer.astro";
import { SITE_TITLE } from "@/consts";

interface Props {
  title?: string;
  description?: string;
  image?: { src: string };
}

const { title = SITE_TITLE, description = "An agentic OS: identity, coordination, and budgets for autonomous agents.", image } = Astro.props;
const siteOrigin = Astro.site?.origin ?? "https://web-ct8.pages.dev";
const canonicalURL = new URL(Astro.url.pathname, Astro.site ?? "https://web-ct8.pages.dev");
---

<script is:inline>
	const getThemePreference = () => {
		if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
			const theme = localStorage.getItem('theme');
			if (theme === 'system') {
				return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
			}
			if (theme === 'dark' || theme === 'light') return theme;
		}
		return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
	};
	const isDark = getThemePreference() === 'dark';
	document.documentElement.classList[isDark ? 'add' : 'remove']('dark');

	if (typeof localStorage !== 'undefined') {
		const observer = new MutationObserver(() => {
			const isDark = document.documentElement.classList.contains('dark');
			const theme = localStorage.getItem('theme');
			if (theme !== 'system') {
				localStorage.setItem('theme', isDark ? 'dark' : 'light');
			}
		});
		observer.observe(document.documentElement, { attributes: true, attributeFilter: ['class'] });
	}
</script>

<!doctype html>
<html lang="en">
  <head>
    <ClientRouter />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <link rel="canonical" href={canonicalURL} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={Astro.url} />
    <meta property="twitter:card" content={image ? "summary_large_image" : "summary"} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    {image && <meta property="og:image" content={new URL(image.src, siteOrigin).toString()} />}
    {image && <meta property="twitter:image" content={new URL(image.src, siteOrigin).toString()} />}
  </head>
  <body class="bg-background text-foreground">
    <div class="flex h-full min-h-0 w-full flex-col overflow-hidden">
      <AppShell client:load>
        <slot />
        <Footer />
      </AppShell>
    </div>
  </body>
</html>
