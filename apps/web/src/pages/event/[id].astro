---
import Layout from "@/layouts/Layout.astro";
import { NostrEventSection } from "@/components/NostrEventSection.tsx";
import { SITE_TITLE } from "@/consts";

export const prerender = false;

const { id } = Astro.params;
---

<Layout
  title={id ? `event/${id} | ${SITE_TITLE}` : SITE_TITLE}
  description="View a Nostr event by id."
>
  <div class="w-full min-w-0 flex-1 flex flex-col px-4 py-6">
    <div class="w-full max-w-3xl mx-auto flex flex-col gap-4">
      {id ? (
        <NostrEventSection client:load eventId={id} />
      ) : (
        <p class="text-muted-foreground">
          No event selected. <a href="/feed" class="text-primary hover:underline">Go to feed</a>.
        </p>
      )}
    </div>
  </div>
</Layout>
