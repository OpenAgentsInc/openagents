---
import Layout from "../layouts/Layout.astro";
import SignInForm from "../components/SignInForm.tsx";
import { Card, CardContent, CardHeader, CardTitle } from "../components/ui/card";
import { SITE_TITLE } from "@/consts";
---

<Layout title={`Log in | ${SITE_TITLE}`} description="Log in to OpenAgents.">
  <main class="flex min-h-full flex-1 flex-col w-full">
    <div class="flex flex-1 items-center justify-center px-4 py-12">
      <Card class="w-full max-w-md">
        <CardHeader>
          <CardTitle class="text-2xl">Log in</CardTitle>
        </CardHeader>
        <CardContent class="space-y-4">
          <SignInForm client:load />
          <p class="mt-4 text-center text-sm text-muted-foreground">
            No account?{" "}
            <a href="/signup" class="text-primary underline-offset-4 hover:underline font-medium">
              Register
            </a>
          </p>
        </CardContent>
      </Card>
    </div>
  </main>
</Layout>
