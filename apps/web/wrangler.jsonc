/**
 * Cloudflare Workers config for apps/web.
 * Custom domain openagents.com: add in Dashboard → Workers & Pages → autopilot-web → Settings → Domains & routes
 * (remove openagents.com from the old worker first, then add route for openagents.com/* to this worker).
 * https://developers.cloudflare.com/workers/wrangler/configuration/
 */
{
  "$schema": "node_modules/wrangler/config-schema.json",
  "name": "autopilot-web",
  "compatibility_date": "2025-09-02",
  "compatibility_flags": ["nodejs_compat"],
  "main": "@tanstack/react-start/server-entry",
  "observability": {
    "enabled": true
  },
  "vars": {
    "WORKOS_REDIRECT_URI": "https://openagents.com/callback",
    "OA_ADMIN_EMAILS": "chris@openagents.com"
  }
  // Production secrets (from .env.production): run once before deploy:
  //   npm run wrangler:secrets
  // This pushes WORKOS_CLIENT_ID, WORKOS_API_KEY, WORKOS_COOKIE_PASSWORD,
  // AUTOPILOT_CODEX_SECRET, OA_INTERNAL_KEY, PUBLIC_API_URL to the Worker.
}
