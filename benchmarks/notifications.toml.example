# Autopilot Notification Configuration
# Copy to ~/.openagents/notifications.toml or specify with --notifications-config

# Email addresses to notify on critical events
email = [
    # "dev@example.com",
    # "team@example.com"
]

# Webhook URLs for Slack, Discord, or custom integrations
webhook = [
    # "https://hooks.slack.com/services/YOUR/WEBHOOK/URL",
    # "https://discord.com/api/webhooks/YOUR/WEBHOOK/URL",
]

# Minimum severity to trigger notifications
# Options: "info", "warning", "error", "critical"
min_severity = "error"

# Rate limit: maximum notifications per hour
rate_limit_per_hour = 10

# SMTP configuration (optional - for email notifications)
# [smtp]
# host = "smtp.gmail.com"
# port = 587
# username = "your-email@gmail.com"
# password = "your-app-password"  # Use app-specific password, not account password
# from = "autopilot@example.com"

## Examples ##

# Slack webhook example:
# 1. Go to https://api.slack.com/messaging/webhooks
# 2. Create incoming webhook for your channel
# 3. Add URL to webhook array above
#
# webhook = ["https://hooks.slack.com/services/T00000000/B00000000/XXXXXXXXXXXXXXXXXXXX"]

# Discord webhook example:
# 1. Go to Server Settings → Integrations → Webhooks
# 2. Create webhook
# 3. Copy webhook URL
# 4. Add to webhook array above
#
# webhook = ["https://discord.com/api/webhooks/123456789012345678/abcdef..."]

