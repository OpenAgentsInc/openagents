{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://openagents.com/schemas/comms/integration-manifest.v1.json",
  "title": "Comms Integration Manifest v1",
  "type": "object",
  "required": [
    "manifest_version",
    "integration_id",
    "provider",
    "status",
    "tool_pack",
    "capabilities",
    "secrets_ref",
    "policy",
    "webhook"
  ],
  "additionalProperties": false,
  "properties": {
    "manifest_version": {
      "type": "string",
      "const": "comms.integration.v1"
    },
    "integration_id": {
      "type": "string",
      "minLength": 3,
      "maxLength": 128,
      "pattern": "^[a-zA-Z0-9._:-]+$"
    },
    "provider": {
      "type": "string",
      "enum": ["resend"]
    },
    "status": {
      "type": "string",
      "enum": ["active", "inactive", "error"]
    },
    "tool_pack": {
      "type": "string",
      "const": "comms.v1"
    },
    "capabilities": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "enum": [
          "send",
          "render_template",
          "upsert_suppression",
          "record_delivery_event"
        ]
      },
      "uniqueItems": true
    },
    "secrets_ref": {
      "type": "object",
      "required": ["provider", "key_id"],
      "additionalProperties": false,
      "properties": {
        "provider": {
          "type": "string",
          "enum": ["laravel"]
        },
        "key_id": {
          "type": "string",
          "minLength": 3,
          "maxLength": 256
        }
      }
    },
    "policy": {
      "type": "object",
      "required": ["consent_required", "suppression_mode", "max_send_per_minute"],
      "additionalProperties": false,
      "properties": {
        "consent_required": {
          "type": "boolean"
        },
        "suppression_mode": {
          "type": "string",
          "enum": ["enforce", "audit_only"]
        },
        "max_send_per_minute": {
          "type": "integer",
          "minimum": 1,
          "maximum": 10000
        }
      }
    },
    "webhook": {
      "type": "object",
      "required": ["verification", "events"],
      "additionalProperties": false,
      "properties": {
        "verification": {
          "type": "string",
          "enum": ["hmac_sha256"]
        },
        "events": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "enum": ["delivered", "bounced", "complained", "unsubscribed"]
          },
          "uniqueItems": true
        }
      }
    }
  }
}
