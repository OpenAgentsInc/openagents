{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "types": ["react", "react-native"],
    "paths": {
      "@/*": ["./*"],
      "tinyvex/*": ["../packages/tinyvex/src/*"],
      "tricoder/types": ["../packages/tricoder/src/types/index.ts"],
      "@openagentsinc/theme": ["../packages/openagents-theme"],
      "@openagentsinc/theme/*": ["../packages/openagents-theme/*"],
      "@openagentsinc/core": ["../packages/openagents-core/index.d.ts"],
      "zustand": ["./node_modules/zustand/index.d.ts"],
      "zustand/middleware": ["./node_modules/zustand/middleware"],
      "zustand/middleware/persist": ["./node_modules/zustand/middleware/persist/index.d.ts"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
