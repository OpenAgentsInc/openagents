{
  "name": "openagents",
  "version": "0.1.0",
  "private": true,
  "workspaces": ["next", "tauri", "packages/*"],
  "scripts": {
    "predev": "convex dev --until-success && convex dev --once --run-sh \"node convex-setup.mjs --once\" && convex dashboard",
    "dev": "npm-run-all --parallel dev:frontend dev:backend",
    "dev:frontend": "cd next && bun run dev",
    "dev:backend": "convex dev",
    "desktop": "cd tauri && bun run desktop",
    "build": "cd next && bun run build",
    "convex:deploy": "convex deploy"
  },
  "dependencies": {
    "@convex-dev/auth": "^0.0.90",
    "convex": "^1.29.0",
    "dotenv": "^17.2.3",
    "npm-run-all2": "^5.0.2"
  },
  "devDependencies": {
    "@types/node": "^24",
    "typescript": "^5"
  },
  "packageManager": "bun@1.3.0"
}
