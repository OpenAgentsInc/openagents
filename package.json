{
  "name": "openagents",
  "private": true,
  "license": "AGPL-3.0-or-later",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "onyx": "yarn workspace @openagents/onyx ios",
    "onyx:start": "yarn workspace @openagents/onyx start",
    "coder": "yarn workspace @openagents/coder start",
    "t": "yarn workspaces run t",
    "t:coder": "yarn workspace @openagents/coder tsc --noEmit",
    "t:onyx": "yarn workspace @openagents/onyx tsc --noEmit",
    "t:ui": "yarn workspace @openagents/ui t",
    "clean": "rm -rf **/yarn.lock **/node_modules && yarn install && yarn workspace @openagents/onyx prebuild:clean"
  },
  "devDependencies": {
    "@types/react": "~18.2.45",
    "prettier": "^3.5.3",
    "typescript": "^5.3.3"
  },
  "resolutions": {
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-native": "0.76.7",
    "@types/react": "~18.2.45",
    "@types/react-dom": "~18.2.17"
  }
}
