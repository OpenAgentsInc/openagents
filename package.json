{
  "name": "@openagentsinc/desktop",
  "version": "0.1.1-golden-loop-v2-demo",
  "description": "Your agent command center",
  "scripts": {
    "dev": "electrobun build && electrobun dev",
    "build": "electrobun build",
    "start": "bun run dev",
    "typecheck": "tsc --noEmit -p tsconfig.typecheck.json",
    "test": "bun test",
    "models:generate": "bun scripts/generate-models.ts",
    "prepare": "effect-language-service patch",
    "hi": "bun --bun src/llm/openrouter-cli.ts -- --prompt 'Say hi'",
    "demo:edit": "bun --bun src/tools/edit-demo.ts",
    "demo:agent-tools": "echo \"openrouter tool demo removed\"",
    "tasks:init": "bun src/tasks/cli.ts init",
    "tasks:list": "bun src/tasks/cli.ts list",
    "tasks:ready": "bun src/tasks/cli.ts ready",
    "tasks:next": "bun src/tasks/cli.ts next",
    "tasks:create": "bun src/tasks/cli.ts create",
    "tasks:update": "bun src/tasks/cli.ts update",
    "mechacoder": "bun src/agent/do-one-task.ts",
    "mechacoder:cc-only": "bun src/agent/do-one-task.ts --cc-only",
    "mechacoder:legacy": "bun src/agent/do-one-task.ts --legacy",
    "mechacoder:overnight": "bun src/agent/overnight.ts",
    "mechacoder:overnight:cc-only": "bun src/agent/overnight.ts --cc-only",
    "mechacoder:overnight:legacy": "bun src/agent/overnight.ts --legacy"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "0.1.56",
    "@effect/cli": "0.72.1",
    "@effect/platform": "0.93.6",
    "@effect/platform-bun": "0.86.0",
    "@openrouter/sdk": "0.1.27",
    "diff": "8.0.2",
    "effect": "3.19.8",
    "electrobun": "0.1.12",
    "zod": "3.24.4"
  },
  "devDependencies": {
    "@effect/language-service": "0.58.0",
    "@types/bun": "1.3.3",
    "typescript": "5.9.3"
  }
}
