{
  "name": "openagents",
  "version": "0.1.0",
  "private": true,
  "description": "Claude Code wrapper with desktop and mobile apps",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "bun@1.2.16",
  "scripts": {
    "dev:desktop": "bun --cwd apps/desktop run dev",
    "dev:mobile": "bun --cwd apps/mobile start",
    "build:desktop": "bun --cwd apps/desktop run build",
    "build:mobile": "bun --cwd apps/mobile run build",
    "install:all": "bun install",
    "clean": "bun run clean:node_modules && bun run clean:dist",
    "clean:node_modules": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "clean:dist": "find . -name 'dist' -type d -prune -exec rm -rf '{}' +"
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "typescript": "~5.6.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  }
}