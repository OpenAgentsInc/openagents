{
  "name": "@openagentsinc/lightning-effect",
  "version": "0.0.1",
  "type": "module",
  "description": "Effect-first Lightning + L402 contracts and runtime interfaces",
  "main": "src/index.ts",
  "module": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./contracts": "./src/contracts/index.ts",
    "./errors": "./src/errors/index.ts",
    "./services": "./src/services/index.ts",
    "./layers": "./src/layers/index.ts",
    "./adapters": "./src/adapters/index.ts",
    "./l402": "./src/l402/index.ts",
    "./lnd-effect": "./src/lnd-effect/index.ts"
  },
  "scripts": {
    "build": "npm run typecheck",
    "typecheck": "tsc --noEmit",
    "effect:patch": "effect-language-service patch",
    "test": "vitest run",
    "test:contracts": "vitest run -c vitest.contracts.config.ts",
    "test:watch": "vitest"
  },
  "peerDependencies": {
    "@openagentsinc/lnd-effect": "^0.0.1",
    "effect": "^3.19.16",
    "typescript": "^5"
  },
  "peerDependenciesMeta": {
    "@openagentsinc/lnd-effect": {
      "optional": true
    }
  },
  "devDependencies": {
    "@effect/language-service": "^0.73.1",
    "@effect/vitest": "^0.27.0",
    "@openagentsinc/lnd-effect": "file:../lnd-effect",
    "@vitest/coverage-v8": "^3.2.4",
    "effect": "^3.19.16",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
