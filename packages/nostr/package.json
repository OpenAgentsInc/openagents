{
  "name": "@openagentsinc/nostr",
  "version": "0.0.0",
  "type": "module",
  "license": "CC0-1.0",
  "description": "Effect-based Nostr protocol implementation",
  "repository": {
    "type": "git",
    "url": "https://github.com/OpenAgentsInc/openagents",
    "directory": "packages/nostr"
  },
  "publishConfig": {
    "access": "public",
    "directory": "dist"
  },
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/dts/index.d.ts",
  "scripts": {
    "codegen": "build-utils prepare-v2",
    "build": "pnpm build-esm && pnpm build-annotate && pnpm build-cjs && build-utils pack-v2 && pnpm fix-dist",
    "build-esm": "tsc -b tsconfig.build.json",
    "build-cjs": "babel build/esm --plugins @babel/transform-export-namespace-from --plugins @babel/transform-modules-commonjs --out-dir build/cjs --source-maps",
    "build-annotate": "babel build/esm --plugins annotate-pure-calls --out-dir build/esm --source-maps",
    "fix-dist": "node ../../scripts/fix-effect-dist.js",
    "check": "tsc -b tsconfig.json",
    "test": "vitest",
    "coverage": "vitest --coverage"
  },
  "dependencies": {
    "@effect/platform": "0.84.6",
    "@noble/curves": "1.8.1",
    "@noble/hashes": "1.3.3",
    "@scure/base": "1.2.4",
    "@scure/bip32": "^1.7.0",
    "@scure/bip39": "^1.6.0",
    "effect": "3.16.3",
    "ws": "8.18.0"
  },
  "devDependencies": {
    "@types/ws": "8.5.14"
  },
  "effect": {
    "generateExports": {
      "include": [
        "**/*.ts"
      ]
    },
    "generateIndex": {
      "include": [
        "**/*.ts"
      ]
    }
  }
}