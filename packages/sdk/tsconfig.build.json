{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "tsBuildInfoFile": ".tsbuildinfo.build",
    "rootDir": "src",
    "outDir": "build/esm",
    "module": "NodeNext",
    "target": "ES2022",
    "moduleResolution": "NodeNext",
    "paths": {
      "@openagentsinc/nostr": ["../../packages/nostr/dist/dts"],
      "@openagentsinc/nostr/*": ["../../packages/nostr/dist/dts/*"],
      "@openagentsinc/container": ["../../packages/container/src/index.ts"],
      "@openagentsinc/container/*": ["../../packages/container/src/*.ts"]
    }
  },
  "exclude": ["test", "examples", "dist", "build"],
  "references": [
    { "path": "../nostr/tsconfig.build.json" }
  ]
}