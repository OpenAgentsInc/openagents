{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "rootDir": "src",
    "outDir": "build/dts",
    "lib": ["ESNext", "DOM"],
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "paths": {
      "@openagentsinc/nostr": ["../../packages/nostr/dist/dts"],
      "@openagentsinc/nostr/*": ["../../packages/nostr/dist/dts/*"],
      "@openagentsinc/container": ["../../packages/container/src/index.ts"],
      "@openagentsinc/container/*": ["../../packages/container/src/*.ts"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "build"],
  "references": [
    { "path": "../nostr" }
  ]
}