{
  "compilerOptions": {
    "outDir": "dist",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "types": ["node"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "lib": ["ES2022"]
  },
  "include": ["src"]
}
