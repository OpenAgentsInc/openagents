{
  "name": "@openagentsinc/ui",
  "version": "0.0.0",
  "type": "module",
  "license": "CC0-1.0",
  "description": "OpenAgents UI components powered by Basecoat",
  "repository": {
    "type": "git",
    "url": "https://github.com/OpenAgentsInc/openagents",
    "directory": "packages/ui"
  },
  "publishConfig": {
    "access": "public",
    "directory": "dist"
  },
  "main": "dist/basecoat/index.css",
  "style": "dist/basecoat/index.css",
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": "./dist/basecoat/index.css",
    "./basecoat": "./dist/basecoat/index.css",
    "./basecoat.css": "./dist/basecoat/index.css",
    "./webtui.css": "./dist/webtui.css",
    "./theme-catppuccin.css": "./dist/theme-catppuccin.css",
    "./theme-gruvbox.css": "./dist/theme-gruvbox.css",
    "./theme-nord.css": "./dist/theme-nord.css",
    "./theme-zinc.css": "./dist/theme-zinc.css",
    "./webtui/index.css": "./dist/webtui/index.css",
    "./webtui/full.css": "./dist/webtui/full.css",
    "./webtui/base.css": "./dist/webtui/base.css",
    "./tailwind": "./dist/tailwind/index.css",
    "./tailwind/index.css": "./dist/tailwind/index.css"
  },
  "scripts": {
    "build": "pnpm build:css && pnpm build:legacy",
    "build:css": "tailwindcss -i src/basecoat/index.css -o dist/basecoat/index.css --minify",
    "build:legacy": "mkdir -p dist dist/webtui dist/tailwind && cp src/*.css dist/ && cp -r src/webtui dist/ && cp -r src/tailwind dist/",
    "dev": "tailwindcss -i src/basecoat/index.css -o dist/basecoat/index.css --watch",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "basecoat-css": "^0.2.5"
  },
  "devDependencies": {
    "postcss": "^8.5.6",
    "postcss-import": "^16.1.1",
    "tailwindcss": "^3.4.17"
  },
  "keywords": [
    "css",
    "ui",
    "components",
    "basecoat",
    "openagents"
  ]
}