{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "OpenAgents",
  "version": "0.1.0",
  "identifier": "com.openagents.desktop",
  "build": {
    "beforeDevCommand": "cd ../expo && EXPO_WEB_PORT=19006 bun run web -- --port 8082",
    "devUrl": "http://localhost:8082",
    "beforeBuildCommand": "cd ../expo && bunx expo export -p web --output-dir web-dist",
    "frontendDist": "../../expo/web-dist"
  },
  "app": {
    "windows": [
      {
        "title": "OpenAgents",
        "width": 1600,
        "height": 1000
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
