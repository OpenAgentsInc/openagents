{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "OpenAgents",
  "version": "0.1.0",
  "identifier": "com.openagents.desktop",
  "build": {
    "beforeDevCommand": "cd .. && bun run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "cd .. && bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "OpenAgents",
        "width": 1600,
        "height": 1000
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
