<?xml version="1.0" encoding="UTF-8" ?>
<doc xmlns="https://hyperview.org/hyperview"
     xmlns:local="https://openagents.com/hyperview-local">
  <screen style="screen">
    <styles>
      <style id="screen"
        backgroundColor="#000" />

      <style id="body"
        backgroundColor="#000"
        flex="1"
        flexDirection="column"
        alignItems="center"
        paddingTop="50" />

      <style id="device"
        backgroundColor="#000"
        borderRadius="50"
        flexDirection="column"
        justifyContent="space-between"
        alignItems="center"
        width="100%"
        flex="1"
        padding="24" />

      <style id="inputBox"
        backgroundColor="#000"
        borderRadius="18"
        flexDirection="row"
        justifyContent="space-between"
        alignItems="center"
        width="100%"
        height="74" />

      <style id="voiceContainer"
        flexDirection="row"
        alignItems="center"
        paddingLeft="24" />

      <style id="askAnything"
        color="#515151"
        marginLeft="24"
        fontSize="16" />

      <style id="sendContainer"
        marginRight="30" />

      <style id="menuItem"
        flexDirection="row"
        alignItems="center"
        width="100%"
        marginBottom="40" />

      <style id="menuText"
        color="#666"
        fontSize="18" />

      <style id="menuIconContainer"
        width="56" />

      <style id="whiteText"
        color="#fff" />

      <style id="conversationText"
        color="#666"
        marginBottom="60"
        fontSize="18" />

      <style id="menuContainerTop"
        width="100%"
        paddingTop="12"
        paddingLeft="12" />

      <style id="menuContainerBottom"
        width="100%" />

      <style id="conversationContainer"
        width="100%"
        flex="1"
        justifyContent="center"
        alignItems="center" />

      <style id="logo"
        width="256"
        height="256"
        marginBottom="24"
        marginTop="-20" />

      <style id="logoContainer"
        width="100%"
        alignItems="center"
        marginBottom="24" />

      <style id="topContainer"
        flexDirection="row"
        justifyContent="space-between"
        alignItems="center"
        width="100%" />

      <style id="demoButton"
        color="#fff"
        fontSize="16"
        borderWidth="1"
        borderColor="#fff"
        borderRadius="8"
        paddingVertical="8"
        paddingHorizontal="16" />
    </styles>

    <body style="body">
      <view style="device">
        <!-- Top Section -->
        <view style="menuContainerTop">
          <view style="topContainer">
            <local:svg src="arrow-right" width="20" height="20" />
            <text style="demoButton" href="/solve-demo-repo" action="solve-demo-repo">Solve Demo Issue</text>
          </view>
        </view>

        <!-- Middle Section -->
        <view style="conversationContainer">
          <view>
            <local:image src="loading" style="logo" />
          </view>
        </view>

        <!-- Bottom Section -->
        <view style="inputBox">
          <view style="voiceContainer">
            <local:svg src="voice" width="26" height="26" color="#515151" />
            <text style="askAnything">Ask anything</text>
          </view>
          <view style="sendContainer">
            <local:svg src="send" width="19" height="19" color="#515151" />
          </view>
        </view>
      </view>
    </body>
  </screen>
</doc>
