{
  "compilerOptions": {
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "moduleDetection": "force",
    "composite": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "esModuleInterop": false,
    "declaration": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "NodeNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": [],
    "isolatedModules": true,
    "sourceMap": true,
    "declarationMap": true,
    "noImplicitReturns": false,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "noEmitOnError": false,
    "noErrorTruncation": false,
    "allowJs": false,
    "checkJs": false,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUncheckedIndexedAccess": false,
    "strictNullChecks": true,
    "baseUrl": ".",
    "target": "ES2022",
    "module": "NodeNext",
    "incremental": true,
    "removeComments": false,
    "plugins": [{ "name": "@effect/language-service" }],
    "paths": {
      "@openagentsinc/ai": ["./packages/ai/src/index.ts"],
      "@openagentsinc/ai/*": ["./packages/ai/src/*.ts"],
      "@openagentsinc/ai/test/*": ["./packages/ai/test/*.js"],
      "@openagentsinc/cli": ["./packages/cli/src/index.js"],
      "@openagentsinc/cli/*": ["./packages/cli/src/*.js"],
      "@openagentsinc/cli/test/*": ["./packages/cli/test/*.js"],
      "@openagentsinc/nostr": ["./packages/nostr/src/index.js"],
      "@openagentsinc/nostr/*": ["./packages/nostr/src/*.js"],
      "@openagentsinc/nostr/test/*": ["./packages/nostr/test/*.js"],
      "@openagentsinc/psionic": ["./packages/psionic/src/index.ts"],
      "@openagentsinc/psionic/*": ["./packages/psionic/src/*.ts"],
      "@openagentsinc/playground": ["./apps/playground/src/index.js"],
      "@openagentsinc/playground/*": ["./apps/playground/src/*.js"],
      "@openagentsinc/playground/test/*": ["./apps/playground/test/*.js"],
      "@openagentsinc/pylon": ["./apps/pylon/src/main.js"],
      "@openagentsinc/pylon/*": ["./apps/pylon/src/*.js"],
      "@openagentsinc/openagents.com": ["./apps/openagents.com/src/index.ts"],
      "@openagentsinc/openagents.com/*": ["./apps/openagents.com/src/*.ts"],
      "@openagentsinc/relay": ["./packages/relay/src/index.js"],
      "@openagentsinc/relay/*": ["./packages/relay/src/*.js"],
      "@openagentsinc/relay/test/*": ["./packages/relay/test/*.js"],
      "@openagentsinc/ui": ["./packages/ui/src/index.js"],
      "@openagentsinc/ui/*": ["./packages/ui/src/*.js"],
      "@openagentsinc/ui/test/*": ["./packages/ui/test/*.js"]
    }
  }
}
